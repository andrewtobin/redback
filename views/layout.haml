!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title #{$siteTitle}
    %meta{'http-equiv' => "content-type", :content => "text/html; charset=utf-8"}
    %meta{:name => "language", :content => "english"}
    %meta{:name => "author", :content => $author}
    %link{:href => "/styles/layout/base.css?cdv=1", :rel => "stylesheet", :type => "text/css"}  
    %link{:href => "/styles/themes/" + $siteTheme + "/Theme.css?cdv=1", :rel => "stylesheet", :type => "text/css"} 
    %link{:rel => "icon", :type => "image/png", :href => "/images/favicon.png"}
    %meta{:name => "description", :content => $siteDescription}
    %meta{:name => "keywords", :content => $siteKeywords}  
    #{$htmlHead}
    /[if lte IE 8]
      :javascript 
        document.createElement("footer");document.createElement("header");
  %body
    .top
      .header
        %a.logo{:href => "/", :title => $siteTitle} #{$siteTitle}
    .nav
      %ul
        %li
          %a{:href => "/"} Home
        - if authorized?
          %li
            %a{:href => "/new"} New Post
          %li
            %a{:href => "/admin"} Admin
          %li
            %a{:href => "/unpublished"} Unpublished Posts
          %li
            %a{:href => "/logout"} Logout
        .search
        %form{:action => "/search", :method => "get"}
          %p
            %input#medium{:alt => "Search", :id => "q", :type => "text", :value => ""}
            %input#submit{:type => "submit", :id => "search", :value => "Search"}
    .body
      =yield
      %script{:type => 'text/javascript', :src => '/scripts/JQuery/jquery-1.3.2.min.js'}
      %script{:type => 'text/javascript', :src => '/scripts/JQuery/jsdate.js'}
      %script{:type => 'text/javascript', :src => '/scripts/Prettify/Prettify.js'}
      %script{:type => 'text/javascript', :src => '/scripts/Showdown/Showdown.js'}
      %script{:type => 'text/javascript', :src => '/scripts/Showdown/wmd.js'}
      %script{:type => 'text/javascript', :src => '/scripts/Site/Site.js'}
    .footer
      = $siteFooter
      - if authorized?
        %p
          Is this your blog? 
          %a{:href => "/login"} Log in and update it.
    #{$htmlFoot}     